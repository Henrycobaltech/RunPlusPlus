<Window x:Class="RunPlusPlus.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Run ++" Height="300" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="10">
            <TextBlock Text="Run ++" FontSize="30"/>
            <TextBlock x:Name="versionText"/>
        </StackPanel>
        <TextBlock Grid.Row="2" Margin="10">
            <Hyperlink NavigateUri="http://rpp.codeplex.com/" Click="HyperLinkClick">
                <TextBlock Text="http://rpp.codeplex.com/"/>
            </Hyperlink>
        </TextBlock>
    </Grid>
</Window>
