<metro:MetroWindow x:Class="RunPlusPlus.View.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        GlowBrush="{DynamicResource AccentColorBrush}"
        BorderThickness="1"
        Title="About Run ++" Height="300" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="10">
            <TextBlock Text="Run ++ 1.0" FontSize="30"/>
            <TextBlock x:Name="versionText"/>
        </StackPanel>
        <TextBlock Grid.Row="1" Margin="10" TextWrapping="WrapWithOverflow">
            Please star me on GitHub
        </TextBlock>
        <TextBlock Grid.Row="2" Margin="10">
            <Hyperlink NavigateUri="https://github.com/Henrycobaltech/RunPlusPlus" Click="HyperLinkClick">
                <TextBlock Text="https://github.com/Henrycobaltech/RunPlusPlus"/>
            </Hyperlink>
        </TextBlock>
    </Grid>
</metro:MetroWindow>
